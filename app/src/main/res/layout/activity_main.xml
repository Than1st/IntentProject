<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_intent_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_btn_intent_no_data"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_intent_with_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/intent_putextra_text"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="@id/btn_intent_no_data"
        app:layout_constraintEnd_toEndOf="@id/btn_intent_no_data"
        app:layout_constraintTop_toBottomOf="@id/btn_intent_no_data"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_bundle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/intent_bundle_text"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_intent_with_data"
        app:layout_constraintStart_toStartOf="@id/btn_intent_with_data"
        app:layout_constraintEnd_toEndOf="@id/btn_intent_with_data"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_serializable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/intent_serializable_text"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_bundle"
        app:layout_constraintStart_toStartOf="@id/btn_bundle"
        app:layout_constraintEnd_toEndOf="@id/btn_bundle"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_parcelable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intent Parcelable"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_serializable"
        app:layout_constraintStart_toStartOf="@id/btn_serializable"
        app:layout_constraintEnd_toEndOf="@id/btn_serializable"/>

</androidx.constraintlayout.widget.ConstraintLayout>